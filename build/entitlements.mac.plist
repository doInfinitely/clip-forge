<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<!-- Camera access -->
	<key>com.apple.security.device.camera</key>
	<true/>
	<!-- Microphone access -->
	<key>com.apple.security.device.audio-input</key>
	<true/>
	<!-- Screen recording permission (requires macOS 10.15+) -->
	<key>com.apple.security.screen-capture</key>
	<true/>
	<!-- Network access for AI features -->
	<key>com.apple.security.network.client</key>
	<true/>
	<!-- Allow JIT for performance -->
	<key>com.apple.security.cs.allow-jit</key>
	<true/>
	<!-- Allow unsigned executable memory (needed for some native modules) -->
	<key>com.apple.security.cs.allow-unsigned-executable-memory</key>
	<true/>
	<!-- Disable library validation to allow loading of native modules -->
	<key>com.apple.security.cs.disable-library-validation</key>
	<true/>
</dict>
</plist>

